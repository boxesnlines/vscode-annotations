{
  "name": "boxesnlines-annotations",
  "displayName": "BoxesNLines.Annotations",
  "description": "Annotate code separately from your code - all the benefits of comments in a world that's scared of comments.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "BoxesNLines.AddAnnotation",
        "title": "Boxes'n'Lines: Add Annotation"
      },
      {
        "command": "BoxesNLines.EditAnnotation",
        "title": "Boxes'n'Lines: Edit Annotation"
      },
      {
        "command": "BoxesNLines.DeleteAnnotation",
        "title": "Boxes'n'Lines: Delete Annotation"
      },
      {
        "command": "BoxesNLines.ShowAnnotations",
        "title": "Boxes'n'Lines: Show All Annotations"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "annotations-view",
          "title": "Annotations",
          "icon": "media/annotations.svg"
        }
      ]
    },
    "views": {
      "annotations-view": [
        {
          "id": "annotationsList",
          "name": "All Annotations",
          "icon": "media/plus-light.svg"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "BoxesNLines.AddAnnotation",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "BoxesNLines.DeleteAnnotation",
          "when": "view == annotationsList && viewItem == annotation",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Boxes'n'Lines Annotations",
      "type": "object",
      "properties": {
        "boxesnlines.Annotations.annotationsRepository": {
          "type": "IAnnotationRepository",
          "default": true,
          "description": "Data Provider"
        }
      }
    }

  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "firebase": "^12.6.0"
  }
}
